<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amcaicedo.sena.complaciente">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pandersplash"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="pander.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.amcaicedo.sena.complaciente" />

        <activity
            android:name=".MainActivity"
            android:label="@string/promociones" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoAppBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PromoDetailActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/NoAppBar" />
        <activity
            android:name=".CancionesActivity"
            android:label="@string/lista_canciones"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".FragmentContentActivity"
            android:theme="@style/MyTheme"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>